    {{class1.lower()}}_id: Optional[uuid_pkg.UUID] = Field(default_factory=uuid_pkg.uuid4, foreign_key="{{class1}}.{{class1.lower()}}_sqlid", primary_key=True)
    {{class2.lower()}}_id: Optional[uuid_pkg.UUID] = Field(default_factory=uuid_pkg.uuid4, foreign_key="{{class2}}.{{class2.lower()}}_sqlid", primary_key=True)

